<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="User Pin"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/button_layout_derivate"
            android:id="@+id/edittext_layout_pin"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:text="Derivate Key"
            android:id="@+id/button_layout_derivate"
            android:layout_alignBaseline="@id/edittext_layout_pin"/>

</RelativeLayout>